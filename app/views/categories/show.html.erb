<p style="color: green"><%= notice %></p>
<h1><%= @category.name %> Tasks</h1>
<%= @category.tasks.each do |task| %>
  <p>
    <strong>Name:</strong>
    <%= task.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= task.desc %>
  </p>
  <p>
    <strong>Due date:</strong>
    <%= task.due_date %>
  </p>
<% end %>
<div>
  <%= link_to "Edit this category", edit_category_path(@category) %> |
  <%= link_to "Add task to this category", category_tasks_path(@category) %> |
  <%= link_to "Back to categories", categories_path %>
  <%= button_to "Destroy this category", @category, method: :delete %>
</div>
