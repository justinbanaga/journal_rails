<%= form_with(model: [@category, task]) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block", class: "col-sm-2 col-form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div>
    <%= form.label :desc, "Description", style: "display: block", class: "col-sm-2 col-form-label" %>
    <%= form.text_area :desc, class: "form-floating form-control input-width" %>
  </div>
  <div>
    <%= form.label :due_date, style: "display: block",  class: "col-sm-2 col-form-label" %>
    <%= form.date_field :due_date, class: "form-control" %>
    <br>
  </div>
  <div>
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
