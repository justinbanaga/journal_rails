<p style="color: green"><%= notice %></p>
<h1><%= @category.name%> Tasks </h1>
<div class="tasks">
  <% @tasks.each do |task| %>
    <p>
      <strong>Name:</strong>
      <%= task.name %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= task.desc %>
    </p>
    <p>
      <strong>Due date:</strong>
      <em class="<%= 'urgent' if task.due_date == Date.today%>">
        <%=task.due_date%>
      </ em>
      <p>
        <%= link_to "Show Category", [@category], class: 'btn btn-warning' %>
      </p>
      <p>
        <%= link_to "Edit Task", edit_category_task_path(@category, task), class: 'btn btn-primary' %>
      </p>
      <p>
        <%= link_to 'Destroy Task', [@category, task], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </p>
    <% end %>
  </div>
  <%= link_to 'New Task', new_category_task_path(@category), class: 'btn btn-info' %>
